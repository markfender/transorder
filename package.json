{
  "name": "prepaidgas-dapp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/contracts",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "npm run dev -w prepaidgas-frontend",
    "build": "npm run build -w prepaidgas-frontend",
    "start": "npm run start -w prepaidgas-frontend",
    "lint": "npm run lint -w prepaidgas-frontend",
    "node": "cd packages/contracts && npx hardhat node",
    "sc-deploy-test": "cd packages/contracts && npx hardhat run scripts/deploy/testDeploy.js --network localhost",
    "sc-test": "cd packages/contracts && npx hardhat test",
    "sc-coverage": "cd packages/contracts && npx hardhat coverage"
  }
}
